  } catch (err) {
    console.error('❌ Could not save data2:', err);
  }
}

// Save settings files
function saveSettings() {
  try {
    fs.writeFileSync(SETTINGS_FILE, JSON.stringify(settings, null, 2));
  } catch (err) {
    console.error('❌ Could not save settings:', err);
  }
}

